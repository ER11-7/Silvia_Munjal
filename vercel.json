{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    },
    {
      "src": "main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/auth/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/portal/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/qa-chatbot",
      "dest": "main.py"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1"
    }
  ]
}
